<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p><%= description %></p>
    <div style='display: flex;'>
      <form action="/login" method="POST" style="margin-right: 10px;">
        <% for(let input of inputs){ %>
          <label for="<%= input.name %>"><%= input.name %></label>
          <input
            type="<%= input.type %>"
            name="<%= input.name %>"
            id="<%= input.name %>"
            placeholder="<%= input.placeholder %>"
          />
        <% } %>
        <% if(inputs.length > 0) { %>
            <input type="submit" value="submit"/>
        <% } %>
      </form>

      <% if(message) { %>
      <p><%= message %></p>
      <% } %>

      <% if(results.length > 0) { %>
      <table>
        <thead>
          <% for(let key of keys){ %>
          <th><%= key %></th>
          <% } %>
          <th colspan="2"></th>
        </thead>
        <tbody>
          <% for(let data of results){ %>
          <tr>
            <% for(let key of keys){ %>
            <td><%= data[key] %></td>
            <% } %>
            <td><a href="">Delete</a></td>
            <td><a href="">Update</a></td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
